<!DOCTYPE html>
<html>
<head>
  <title>Pleasepet</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <a class="navbar-left navbar-brand" href="/">
        PleasePet
      </a>
      <ul class="nav navbar-nav navbar-right">
        <% if current_pet %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_pet.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Your pet network", pettings_url %></li>
              <li role="separator" class="divider"></li>
              <li>
                <%= link_to "Edit pet page", edit_page_url(url: current_pet.page.url) %>
              </li>
              <li><%= link_to "Account settings", edit_registration_path(current_pet) %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign out", destroy_session_path(current_pet), method: :delete%></li>
            </ul>
          </li>
        <% else %>
          <li>
            <a href="/pets/sign_up">Sign up</a>
          </li>
        <% end %>
      </ul>
    </ul>
  </nav>
  <div class="container">
    <% if notice %>
      <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>
    <%= yield %>
  </div>
