<div class="index">
  <div class="page-header">
    <h1>PleasePet<br><small>Pet cute pets online!</small></h1>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-3">
      <%= button_to 'Sign up', '/pets/sign_up', class: 'btn btn-default btn-lg btn-primary', method: :get %>
    </div>
    <div class="col-md-3">
      <%= button_to 'Log in', '/pets/sign_in', class: 'btn btn-default btn-lg btn-success' %>
    </div>
  </div>
  <div class="row" style="padding-top: 20px;">
    <div class="col-md-offset-5 col-md-2">
      <a class="btn btn-default btn-lg btn-warning" href="mailto:pleasepet@effy.is">
        Contact
      </a>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-2 col-md-offset-4">
      <h2><%= @stats[:total_pets] %></h2>
      <h4>Pets signed up</h4>
    </div>
    <div class="col-md-2">
      <h2><%= @stats[:total_pettings] %></h2>
      <h4>Pettings performed</h4>
    </div>
  </div>
</div>
