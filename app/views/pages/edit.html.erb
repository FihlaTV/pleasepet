<h1>Edit your pet page</h1>

<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :background %><br>
    <% if @page.background.url %>
      <%= image_tag(@page.background.url, size: "100") %>
    <% end %>
    <%= f.file_field :background %>
  </div>

  <%= f.label :sounds %>
  <ul class="list-group">
    <%= f.fields_for :noises do |noise| %>
      <li class="list-group-item">
        <div class="field">
          <%= render 'noise_fields', f: noise %>
        </div>
      </li>
    <% end %>

    <%= f.fields_for :noise, Noise.new do |noise| %>
      <li class="list-group-item">
        <div class="links">
          <%= link_to_add_association 'Add noise', f, :noises %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
